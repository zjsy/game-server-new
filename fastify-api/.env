# 开发环境配置
NODE_ENV=development

# 数据库配置
RDS_HOST_WRITE=mysql
RDS_HOST_READ=mysql
DB_PORT=3306
DB_DATABASE=fggame
DB_USERNAME=fggame
DB_PASSWORD=a123456
DB_PREFIX=

REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_PREFIX=FG:

# Server
FASTIFY_CLOSE_GRACE_DELAY=1000
LOG_LEVEL=info

# Centrifugo 配置
CENTRIFUGO_API_URL=http://localhost:8000/api
CENTRIFUGO_WS_URL=ws://localhost:8000/connection/websocket
CENTRIFUGO_API_KEY=my_api_key

# bullmq 配置
BULLMQ_REDIS_HOST=redis-dev
BULLMQ_REDIS_PASSWORD=
BULLMQ_REDIS_PORT=6379
BULLMQ_REDIS_DB=0

# JWT 鉴权配置
# JWT 密钥 - 生产环境请使用强随机字符串
# 生成命令: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change_this_to_a_secure_secret_in_production_minimum_32_characters
JWT_EXPIRES_IN=24h
